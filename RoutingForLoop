         }
		 $route = 1;
         foreach ($jsonEncode as $key) {
            if ($route == 1) {
             echo "<script>route.push(new L.LatLng(".$key->lat.",".$key->lon."));</script>";
            }else
            {
             echo "<script>route.push(new L.LatLng(".$key->lat.",".$key->lon."));</script>";
            }
            $route++;
         };

        
